<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.artfara.apps.kipper.RankFragment">

    <TextView
        android:id="@+id/rankInfoMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pointsRankWrapper"
        android:text="Rank at your school"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"/>

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/pointsRankWrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="14dp">

        <TextView
            android:id="@+id/rankString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="#4"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="24pts"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/relativeRankString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pointsRankWrapper"
        android:text="18pts behind #16"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
