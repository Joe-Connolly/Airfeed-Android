<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="4dp"
    android:paddingTop="8dp"
    android:paddingBottom="10dp">

    <TextView android:id="@+id/postBody"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/outerWrapper"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <TextView android:id="@+id/userLetter"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#f42f2f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/numReplies"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/time"
            android:textSize="10sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/voteCount"
            android:textSize="19sp"
            android:layout_toLeftOf="@+id/wrapper"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/time" />
    <LinearLayout
        android:id="@+id/wrapper"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1.0" >


        <Button
            android:id="@+id/upVoteButton"
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".50" />

        <Button
            android:id="@+id/downVoteButton"
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".50" />

    </LinearLayout>
    </LinearLayout>
</RelativeLayout>


